<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WSB_rent_car_app.CarSearch">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            
            <Label x:Name="labelUserName"
               Text="Car type"
               FontSize="14"
               TextColor="Black"
               Margin="3,30,0,0"/>
            <Entry x:Name="entryUserName"
               Placeholder="Car type box to be implemented"/>
            <Label x:Name="labelUserName2"
               Text="Country"
               FontSize="14"
               TextColor="Black"
               Margin="3,30,0,0"/>
            <Entry x:Name="entryUserName2"
               Placeholder="Country combo box to be implemented"/>
            <Label x:Name="labelUserName3"
               Text="Pick Up location"
               FontSize="14"
               TextColor="Black"
               Margin="3,30,0,0"/>
            <Entry x:Name="entryUserName3"
               Placeholder="to be implemented"/>
            <Label x:Name="labelUserName4"
               Text="Dates"
               FontSize="14"
               TextColor="Black"
               Margin="3,30,0,0"/>
            <Entry x:Name="entryUserName4"
               Placeholder="Data picker to be implemented"/>
            <Button x:Name="buttonSearch"
                Text="Search"
                BackgroundColor="#003662"
                TextColor="White"
                CornerRadius="15"
                Margin="45,80,45,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>